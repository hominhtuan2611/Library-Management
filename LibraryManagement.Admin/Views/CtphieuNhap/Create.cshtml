@model LibraryManagement.API.Models.CtphieuNhap

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tạo mới</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PhieuNhap" class="control-label"></label>
                <input asp-for="PhieuNhap" class="form-control" readonly />
                <span asp-validation-for="PhieuNhap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Book" class="control-label"></label>
                <select asp-for="Book" class ="form-control" asp-items="ViewBag.Book"></select>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label"></label>
                <input asp-for="SoLuong" class="form-control" type="number" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-default" href="@Url.Action("Index", new {  phieuNhapId = Model.PhieuNhap  })">Trở lại</a>
</div>
