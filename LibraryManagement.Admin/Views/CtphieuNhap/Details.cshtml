@model LibraryManagement.API.Models.CtphieuNhap

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết</h1>

<div>
    <hr />
    <dl class="row">
        <dt>
            Mã sách
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BookNavigation.Id)
        </dd>
        <dt>
            Tên sách
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BookNavigation.TenSach)
        </dd>
        <dt>
            Số lượng nhập
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Sửa</a> |
    <a class="btn btn-default" href="@Url.Action("Index", new {  phieuNhapId = Model.PhieuNhap  })">Trở lại</a>
</div>
