@model List<LibraryManagement.Admin.Models.Report.SachMuonModel>

@{
    ViewData["Title"] = "SachMuonIt";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="piechart"></div>


<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<script type="text/javascript">
    // Load google charts
    google.charts.load('current', { 'packages': ['corechart'] });
    google.charts.setOnLoadCallback(drawChart);

    // Draw the chart and set the chart values
    function drawChart() {
        var data = google.visualization.arrayToDataTable([

            ['Sách', 'Số lần mượn'],
            ["@Html.Raw(@Model[0].TenSach)", { v: @Model[0].SoLanMuon}],
            ["@Html.Raw(@Model[1].TenSach)", { v: @Model[1].SoLanMuon}],
            ["@Html.Raw(@Model[2].TenSach)", { v: @Model[2].SoLanMuon}]

        ],
            false); // 'false' means that the first row contains labels, not data.





        // Optional; add a title and set the width and height of the chart
        var options = { 'title': '3 Sách mượn ít nhất trong tháng @Model[0].Month', 'width': 1200, 'height': 400 };

        // Display the chart inside the <div> element with id="piechart"


        var chart3 = new google.visualization.PieChart(document.getElementById('piechart'));


        chart3.draw(data, options);
    }
</script>
