@model LibraryManagement.API.Models.CtphieuMuon

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

        <h1>Chỉnh sửa</h1>

        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="PhieuMuon" class="control-label"></label>
                        <input asp-for="PhieuMuon" class="form-control" readonly />
                        <span asp-validation-for="PhieuMuon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Book" class="control-label"></label>
                        <select asp-for="Book" class="form-control" asp-items="ViewBag.Book"></select>
                        <span asp-validation-for="Book" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SoLuong" class="control-label"></label>
                        <input asp-for="SoLuong" class="form-control" type="number" />
                        <span asp-validation-for="SoLuong" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NgayMuon" class="control-label"></label>
                        <input asp-for="NgayMuon" class="form-control" />
                        <span asp-validation-for="NgayMuon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NgayTra" class="control-label"></label>
                        <input asp-for="NgayTra" class="form-control" />
                        <span asp-validation-for="NgayTra" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TinhTrangSach" class="control-label"></label>
                        <input asp-for="TinhTrangSach" class="form-control" />
                        <span asp-validation-for="TinhTrangSach" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Lưu" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

<div>
    <a class="btn btn-default" href="@Url.Action("Index", new {  phieuMuonId = Model.PhieuMuon  })">Trở lại</a>
</div>