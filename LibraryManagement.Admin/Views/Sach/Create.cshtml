@model LibraryManagement.API.Models.Sach

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Tạo mới</h1>

@section Scripts
{
    <script type="text/javascript">

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgDisplay')
                        .attr('src', e.target.result)
                        .width(150)
                        .height(150);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

    </script>
}

<h4>Sách</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenSach" class="control-label"></label>
                <input asp-for="TenSach" class="form-control" />
                <span asp-validation-for="TenSach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TacGia" class="control-label"></label>
                <input asp-for="TacGia" class="form-control" />
                <span asp-validation-for="TacGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoaiSach" class="control-label"></label>
                <select asp-for="LoaiSach" class="form-control" asp-items="ViewBag.LoaiSach"></select>
            </div>
            <div class="form-group">
                <label asp-for="NhaXuatBan" class="control-label"></label>
                <input asp-for="NhaXuatBan" class="form-control" />
                <span asp-validation-for="NhaXuatBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NamXuatBan" class="control-label"></label>
                <input asp-for="NamXuatBan" class="form-control" type="number" />
                <span asp-validation-for="NamXuatBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TongSoTrang" class="control-label"></label>
                <input asp-for="TongSoTrang" class="form-control" type="number" />
                <span asp-validation-for="TongSoTrang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TomTat" class="control-label"></label>
                <input asp-for="TomTat" class="form-control" />
                <span asp-validation-for="TomTat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HinhAnh" class="control-label"></label>
                <input type="file" name="files" class="form-control" id="upload" onchange="readURL(this);" />
                <img src=@Html.DisplayFor(model => model.HinhAnh) alt="Sample Image" height="175" width="175" style="margin-left:17%; margin-top:5%;" id="imgDisplay" />
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-default" asp-action="Index">Trở về</a>
</div>

